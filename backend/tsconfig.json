{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",                                
    "outDir": "./dist",                                  
    "rootDir": "./",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "strictNullChecks": false,                           
    "skipLibCheck": true,       
    "resolveJsonModule": true,        
    "sourceMap": true,                 
    "baseUrl": ".",                                       
    "paths": {
      "@/*": ["*"]
    },
  },
  "include": ["src/**/*"]
}
